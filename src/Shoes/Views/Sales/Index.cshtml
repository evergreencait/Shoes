@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
@model IEnumerable<Shoes.Models.Sale>

<h3>Shoes</h3>

@foreach(var listSales in Model)
{

    <p class="click-details" id="@listSales.SaleId">
        @Html.DisplayFor(modelSales => listSales.ShoeName)
    </p>
}

<div class="details"></div>